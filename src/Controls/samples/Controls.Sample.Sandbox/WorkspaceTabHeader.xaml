<?xml version="1.0" encoding="utf-8" ?>
<TemplatedView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:controls="clr-namespace:Maui.Controls.Sample.Sandbox"
               x:Class="Maui.Controls.Sample.Sandbox.WorkspaceTabHeader"
               x:DataType="controls:WorkspaceTabHeader">
    <TemplatedView.ControlTemplate>
        <ControlTemplate>
            <VerticalStackLayout>
                <Border Stroke="Red">
                    <Label Text="{Binding Title}" TextColor="white"/>
                </Border>
            </VerticalStackLayout>
        </ControlTemplate>
    </TemplatedView.ControlTemplate>
</TemplatedView>