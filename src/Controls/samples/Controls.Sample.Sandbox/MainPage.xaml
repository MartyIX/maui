<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Maui.Controls.Sample"
    x:Class="Maui.Controls.Sample.MainPage"
    x:DataType="local:MainPage">
    <VerticalStackLayout x:Name="myLayout">
        <Label x:Name="info" Text="Click a button" VerticalOptions="Center"/>
        <Button Text="Clear Grid" Clicked="ClearGrid_Clicked"/>
        <Entry x:Name="BatchSize" Text="100"/>
        <Button Text="Batch Add Borders" Clicked="BatchGenerate_Clicked"/>

        <HorizontalStackLayout x:Name="myContentWrapper"/>

    </VerticalStackLayout>
</ContentPage>